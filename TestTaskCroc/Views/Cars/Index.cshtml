@model IEnumerable<Cars>
@{
    ViewData["Title"] = "Cars";
}
<p>
    <a asp-action="CreateNew">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GovNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeOfGearShiftBox)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfPurchase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (Cars item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.ID)</td>
            <td>@Html.DisplayFor(modelItem => item.Brand)</td>
            <td>@Html.DisplayFor(modelItem => item.Model)</td>
            <td>@Html.DisplayFor(modelItem => item.GovNumber)</td>
            <td>@Html.DisplayFor(modelItem => item.TypeOfGearShiftBox)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfPurchase)</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <form asp-controller="Cars" asp-action="Delete" asp-route-id="@item.ID" method="post">
                <a asp-action="Delete" asp-route-id="@item.ID" method="post">Delete</a>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>